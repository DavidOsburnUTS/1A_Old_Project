<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context="com.example.andre.ss1a_fitnessapp.Homepage"
    tools:layout_editor_absoluteY="81dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/welcomeTxt"
            android:layout_centerHorizontal="true"
            android:textAllCaps="true"
            android:textSize="30sp"
            android:textStyle="bold"
            android:padding="10dp"
            tools:text="Welcome back Andre!" />

        <LinearLayout
            android:id="@+id/first_row_layout"
            android:layout_below="@id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/weightTrainingBtn"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_weight="0.5"
                android:layout_margin="3dp"
                android:background="@color/colorAccent"
                android:fontFamily="sans-serif-condensed"
                android:onClick="homeOnClick"
                android:text="@string/weightBtn"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cardioBtn"
                android:layout_width="145dp"
                android:layout_height="145dp"
                android:layout_weight="0.5"
                android:layout_margin="3dp"
                android:background="@color/colorAccent"
                android:fontFamily="sans-serif-condensed"
                android:onClick="homeOnClick"
                android:text="@string/cardioBtn"
                android:textColor="@android:color/background_light"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row_layout"
        android:layout_below="@id/first_row_layout"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/carlorieBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_weight="0.5"
            android:background="@color/colorAccent"
            android:layout_margin="3dp"
            android:fontFamily="sans-serif-condensed"
            android:onClick="homeOnClick"
            android:text="@string/calorieBtn"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/profileBtn"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_weight="0.5"
            android:layout_margin="3dp"
            android:background="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            android:onClick="homeOnClick"
            android:text="@string/profileBtn"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/progressBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/navigation"
        android:text="Progressbar placeholder"
        android:layout_marginBottom="10dp"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/navigation"
        android:layout_alignParentBottom="true"
        tools:layout_editor_absoluteY="546dp" />

</RelativeLayout>
